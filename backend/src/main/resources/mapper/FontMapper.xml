<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.kokoachino.mapper.FontMapper">

    <!-- 查询系统字体和指定团队的字体 -->
    <select id="selectAvailableFonts" resultType="com.github.kokoachino.model.entity.Font">
        SELECT * FROM tw_font WHERE team_id IS NULL OR team_id = #{teamId} ORDER BY created_at DESC
    </select>

    <!-- 根据名称和团队查询字体 -->
    <select id="selectByNameAndTeam" resultType="com.github.kokoachino.model.entity.Font">
        SELECT * FROM tw_font WHERE name = #{name} AND (team_id IS NULL OR team_id = #{teamId}) LIMIT 1
    </select>

</mapper>
